<script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">

    $(window).load(function () {
        CheckCharcters();
    });

    $(document).ready(function () {
        $("#txtText").keyup(function () {
            CheckCharcters();
        });
    });

    function CheckCharcters() {
        var len = $("#txtText").val().length;
        if (Number(len) != 0) {
            if (Number(len) >= 500) {
                $("#content").html(len + " <b>You reached the maximum length of 500 charchter </b>");
            }
            else {
                $("#content").html(len);
            }
        }
        else {
            $("#content").html("0");
        }
    }
</script>

@using (Html.BeginForm("Index", "Count", FormMethod.Post))
{
    <div>
        @Html.TextArea("txtString", new { id = "txtText", @required = "required", placeholder = "PLEASE ENTER STRING.....", cols = 100, @rows = 10, style = "resize:none" })
    </div>
    <div>
        Charcters Count : <span id="content"></span>
    </div>
 
    <p>
        <input type="submit" value="Count" id="btnsubmit" />
    </p>
 
    if (ViewBag.result != null)
    {

        foreach (var item in ViewBag.result)
        {
    <ul>
        <li style="color: red">@item.Key  =  @item.Value</li>
    </ul>
        }
    }
}
